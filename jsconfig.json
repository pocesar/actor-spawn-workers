  "compilerOptions": {
    "module": "commonJS",
    "target": "es2018",
    "moduleResolution": "node",
    "strict": true,
    "checkJs": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "lib": [
      "dom",
      "es2020.string",
      "es2018.asynciterable",
    ]
